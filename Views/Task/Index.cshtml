<h2>Task List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Action</th> <!-- Add a new column for the action button -->
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <button type="submit" class="UpdateBut" data-task-id="@task.TaskId">Update</button>

                </td>
            </tr>
        }
    </tbody>
</table>

